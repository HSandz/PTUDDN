                {
                  "key": "token",
                  "value": "{{adminToken}}",
                  "type": "string"
                }
              ]
            },
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/users/2",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "2"]
            }
          }
        }
      ]
    },
